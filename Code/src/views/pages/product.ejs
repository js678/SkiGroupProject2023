<%- include ('../partials/header') %>
<%- include ('../partials/navbar') %>
<!DOCTYPE html>
<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f1f1f1;
  }

  h1 {
    text-align: center;
    color: #007bff;
    margin-top: 30px;
  }

  form {
    display: flex;
    justify-content: center;
    margin: 50px auto;
  }

  .form-group {
    display: flex;
    align-items: center;
  }

  input[type="text"] {
    border: 1px solid #007bff;
    border-right: none;
    padding: 10px;
    width: 60%;
    border-radius: 5px 0 0 5px;
  }

  .btn {
    border: 1px solid #007bff;
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    border-radius: 0 5px 5px 0;
    cursor: pointer;
  }

  .btn:hover {
    background-color: #0069d9;
  }

  table {
    border-collapse: collapse;
    margin: 50px auto;
    font-size: 16px;
    min-width: 800px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
  }

  th,
  td {
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  th {
    background-color: #007bff;
    color: white;
  }

  tr:hover {
    background-color: #f5f5f5;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  button[type="submit"] {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
  }

  button[type="submit"]:hover {
    background-color: #0069d9;
  }

  .results {
    margin-top: 50px;
  }
</style>
<html>
<head>
	<title>Product Page</title>
</head>
<body>
	<h1>Products</h1>
	<form action="/search" method="get">
		<label for="query">Search:</label>
		<input type="text" name="query" id="query">
		<button type="submit">Search</button>
	</form>
  <% if (message) { %>
    <div class="alert alert-success" role="alert">
      <%= message %>
    </div>
  <% } %>
	<table>
        <thead>
		<tr>
            <th>Product Type</th>
            <th>Price</th>
            <th>Brand</th>
            <th>Name</th>
            <th>Image</th>
          </tr>
        </thead>
		<% products.forEach(function(product) { %>
			<tr>
				<td><%= product.product_type %></td>
                <td><%= product.price %></td>
                <td><%= product.brand %></td>
                <td><%= product.name %></td>
                <td id="table-img"><img src="<%= product.image %>" width="400px" height="400px"/></td>
                <td><form action="/add-to-cart" method="post">
                <input type="hidden" name="product_id" value="<%= product.product_id %>">
                <button type="submit">Add to Cart</button>
                </form>
                <td>
			</tr>
		<% }); %>
	</table>
</body>
</html>

